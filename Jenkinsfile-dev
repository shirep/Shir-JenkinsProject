pipeline {
    agent any
    environment {DOCKERHUB_CREDENTIALS= credentials('dockerhub')}
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '####Start Checkout####'
                    checkout scm
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    echo '###Start Build###'
                    sh 'pwd'
                    sh 'ls'
                    sh 'docker build -t shir-python-image .'
                }
            }
        }

        stage('Login to Docker Hub') {         
            steps{                            
	            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'                 
	            echo 'Login Completed'                
            }           
        }               
        stage('Push Image to Docker Hub') {         
          steps{                            
	        sh 'sudo docker push dockerhubusername/dockerhubreponame:$BUILD_NUMBER'                 
            echo 'Push Image Completed'       
      }           
    }      
  } //stages 
    post {
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
