pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '####Start Checkout####'
                    checkout scm
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    echo '###Start Build###'
                    sh 'pwd'
                    sh 'ls'
                    sh 'docker build -t shir-python-image .'
                }
            }
        }

        stage('Publish Docker Image') {
            steps {
                script {
                    echo '###Start Push###'
                    //sh 'docker login'
                    //sh 'docker push shir-python-image'
                }
            }
        }

        stage('Build and Publish Docker Image') {
            steps {
                script {
                    repositoryName('shirep/jenkins-project')            
                    tag('${GIT_REVISION,length=9}')
                    registryCredentials('dockerhub')
                    forcePull(false)
                    forceTag(false)            
                    createFingerprints(false)            
                    skipDecorate()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
