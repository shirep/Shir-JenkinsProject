pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '###Start Checkout###'
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo '###Start Installation###'
                    sh 'sudo apt install -y python3-pip'
                    sh 'pip install -r Jenkins/python/requirements.txt'
                    sh 'pip3 install pylint'
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    echo '###Start Lint###'
                    sh 'pylint Jenkins/python/app.py'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    echo '###Start Build###'
                    sh 'docker build -t shir-python-image .'
                }
            }
        }

        stage('Publish Docker Image') {
            steps {
                script {
                    echo '###Start Push###'
                    sh 'docker push shir-python-image'
                }
            }
        }
    }

    post {
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
