pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS= credentials('dockerhub')
        GIT_CREDENTIALS = credentials('git-credentials-id')
        }

    stages {
        stage('Checkout') {
            steps {
                script {
                	checkout([$class: 'GitSCM', 
                              branches: [[name: '*/dev']],
                              userRemoteConfigs: [[url: 'https://github.com/shirep/Shir-JenkinsProject.git',
                                        credentialsId: 'git-credentials-id']]]
                }
            }
        }
        stage('Docker Build Shir Python Image') {
            steps {
                script {
                    sh 'docker build -t shir-python-image:$BUILD_NUMBER .'
                    echo 'Build Completed' 
                }
            }
        }

        stage('Login to Docker Hub') {         
            steps{
		        script {
		            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'                 
	                echo 'Login Completed'                
                }           
            } 
        }  

        stage('Push Image to Docker Hub') {         
            steps{
		        script {
		            sh 'docker tag shir-python-image:$BUILD_NUMBER shirep/shir-python-image:$BUILD_NUMBER'
                    sh 'docker push shirep/shir-python-image:$BUILD_NUMBER'               
                    echo 'Push Image Completed'        
                }           
            } 
        }

        stage('Docker Run') {  
            steps{
		        script {
                    sh 'docker run -itd --name shir-container-$BUILD_NUMBER shirep/shir-python-image:$BUILD_NUMBER'
                }
            }
        }

        stage('Merge Dev to Main') {  
            steps{
		        script {
                        sh 'git checkout main'
                        sh 'git merge origin/dev'
                        sh 'git tag -a v1.0.$BUILD_NUMBER -m "Release version 1.0.$BUILD_NUMBER"'
                        //sh 'git config --global credential.helper "!f() { echo username=x-access-token; echo password=$GITHUB_TOKEN; }; f"'
                        sh 'git push https://github.com/shirep/Shir-JenkinsProject.git --tags'
                    }
                }
            }
        }
    }

    post {
        always {  
            sh 'docker logout'           
        } 
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
