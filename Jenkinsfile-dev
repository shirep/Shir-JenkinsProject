pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '###Start Checkout###'
                    checkout scm
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    echo '###Start Build###'
                    sh 'docker build -t shir-python-image .'
                }
            }
        }

        stage('Publish Docker Image') {
            steps {
                script {
                    echo '###Start Push###'
                    sh 'docker push shir-python-image'
                }
            }
        }
    }

    post {
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
