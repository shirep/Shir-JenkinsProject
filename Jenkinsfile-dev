pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '####Start Checkout####'
                    checkout scm
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    echo '###Start Build###'
                    sh 'pwd'
                    sh 'ls'
                    sh 'docker build -t shir-python-image .'
                }
            }
        }

        stage('Publish Docker Image') {
            steps {
                script {
                    echo '###Start Push###'
                    //sh 'docker login'
                    //sh 'docker push shir-python-image'
                }
            }
        }

        stage('Build and Publish Docker Image') {
            steps {
                script {
                    def dockerRepository = 'shirep/jenkins-project'
                    def gitRevision = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()

                    withCredentials([string(credentialsId: 'dockerhub', variable: 'DOCKER_HUB_CREDENTIALS')]) {
                        // Build and push Docker image
                        //sh "docker build -t ${dockerRepository}:${gitRevision} ."
                        sh "docker login -u ${DOCKER_HUB_CREDENTIALS_USR} -p ${DOCKER_HUB_CREDENTIALS_PSW}"
                        sh "docker push ${dockerRepository}:${gitRevision}"
                        sh "docker tag ${dockerRepository}:${gitRevision} ${dockerRepository}:latest"
                        sh "docker push ${dockerRepository}:latest"
                    }
                }
            }
        } // הוספתי סיומת ל-Stages
    }

    post {
        success {
            echo 'Success'
        }
        failure {
            echo 'Failed'
        }
    }
}
